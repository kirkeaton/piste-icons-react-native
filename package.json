{
  "name": "@piste-icons/react-native",
  "description": "React Native components for ski trail difficulty symbols",
  "version": "0.0.0-development",
  "author": "Kirk Eaton <contact@kirkeaton.ca>",
  "bugs": {
    "url": "https://github.com/kirkeaton/piste-icons-react-native/issues"
  },
  "dependencies": {
    "react-native-svg": "14.1.0"
  },
  "devDependencies": {
    "@piste-icons/svg": "1.2.0",
    "@svgr/cli": "8.1.0",
    "@types/react": "18.2.51",
    "husky": "8.0.3",
    "lint-staged": "15.2.0",
    "prettier": "3.2.4",
    "react": "18.2.0",
    "react-native": "0.73.3",
    "semantic-release": "23.0.0",
    "typescript": "5.3.3"
  },
  "engines": {
    "node": ">=18"
  },
  "exports": {
    "types": "./dist/index.d.ts",
    "default": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "homepage": "https://github.com/kirkeaton/piste-icons-react-native#readme",
  "keywords": [
    "piste",
    "ski",
    "trail",
    "difficulty",
    "icons",
    "react",
    "react-native"
  ],
  "license": "BSD-3-Clause",
  "lint-staged": {
    "*.{json,md,ts,tsx}": "prettier --write"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "publishConfig": {
    "access": "public"
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kirkeaton/piste-icons-react-native.git"
  },
  "scripts": {
    "build": "yarn clean && yarn generate && tsc",
    "clean": "find src -type f ! -name 'constants.ts' -exec rm {} \\; && rm -rf dist",
    "generate": "yarn svgr --config-file .svgrrc.cjs node_modules/@piste-icons/svg",
    "prepare": "husky",
    "prepublishOnly": "yarn build"
  },
  "type": "module"
}
